# basic
var t = true
if $t {
    assert true
} else {
    assert false
}

# if, elif, else
{
    var n = 5
    if $n > 10 {
        assert false
    } elif $n > 7 {
        assert false
    } else {
        assert true
    }
}

# nested if, else
{
    var n = 5
    if $n > 20 {
        assert false
    } else {
        if $n > 10 {
            assert false
        } else {
            if $n > 5 {
                assert false
            } else {
                assert true
            }
        }
    }
}
