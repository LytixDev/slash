#!/bin/slash
make clean
make asan
# hack because './slash-asan' doesnt work yet
sudo cp slash-asan /bin/slash-asan

var successes = 0
var tests = 0

loop file in (find "test/" -name "*.slash") {
    $tests += 1
    if (slash-asan $file) as bool {
        $successes += 1
        echo $file "passed"
    } else {
        echo $file "FAILED!"
    }
}

echo "finished asan"
echo $successes "out of" $tests "passed"
