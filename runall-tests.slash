#!/bin/slash
var successes = 0
var tests = (find "test/" -name "*.slash")
var tests_count = (echo $tests | wc -l)

make clean && make asan -j8

loop file in $tests {
    if (./slash-asan $file) as bool {
        $successes += 1
        echo $file "passed"
    } else {
        echo $file "FAILED!"
    }
}

echo "---"
echo $successes "out of" $tests_count "passed"
